@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resources.Home> Loc

<!-- Tailwind “Scaled” Section with Two Images and Responsive Layout -->
<section class="bg-jhooa-beige-100 text-white tracking-wide">
  <div class="max-w-screen-xl mx-auto px-4 py-8">

    <!-- 2-column layout on desktop, single column on mobile -->
    <div class="md:grid md:grid-cols-3 md:gap-6 items-center">

      <!-- LEFT COLUMN: Image #1 on desktop; 
           On mobile, it’s centered and only 75% wide -->
      <div class="mb-8 md:mb-0">
        <img
          src="images/home-experience.jpg"
          alt="Parasailing example 1"
          class="w-3/4 mx-auto md:w-full h-auto object-cover relative md:-bottom-48"
        />
      </div>

      <!-- RIGHT COLUMN: Text content (and possibly Image #2) -->
      <div class="col-span-2 pl-6">
        <h2 class="text-2xl md:text-3xl font-bold mb-4 font-monetaRegular text-jhooa-brick-500">
          @Loc["ExpTitle"]
        </h2>

        <!-- Intro paragraph -->
        <p class="mb-6 leading-relaxed font-amsiProRegular">
          @Loc["ExpDescription"]
        </p>

        <div class="grid grid-cols-10 gap-4">
          <div class="">
            <img src="images/Meteor_Rain.svg" alt=""/>
          </div>

          <div class="col-span-9">
            <h3 class="flex items-center mb-1 text-lg text-jhooa-teal-200 font-butler">
              <!-- Icon could go here if desired -->
              @Loc["ExpPart1Title"]
            </h3>
            <p class="text-sm leading-relaxed">
              @Loc["ExpPart1Desc"]
              <!-- etc. -->
            </p>
          </div>

          <div class="">
            <img src="images/footage.svg" alt=""/>
          </div>

          <div class="col-span-9">
            <h3 class="flex items-center mb-1 text-lg text-jhooa-teal-200 font-butler">
              <!-- Icon could go here if desired -->
              @Loc["ExpPart2Title"]
            </h3>
            <p class="text-sm leading-relaxed">
              @Loc["ExpPart2Desc"]
              <!-- etc. -->
            </p>
          </div>

          <div class="">
            <img src="images/ticket.svg" alt=""/>
          </div>

          <div class="col-span-9">
            <h3 class="flex items-center mb-1 text-lg text-jhooa-teal-200 font-butler">
              <!-- Icon could go here if desired -->
              @Loc["ExpPart3Title"]
            </h3>
            <p class="text-sm leading-relaxed">
              @Loc["ExpPart3Desc"]
              <!-- etc. -->
            </p>
          </div>

          <div class="">
            <img src="images/medal.svg" alt=""/>
          </div>

          <div class="col-span-9">
            <p class="mb-6 text-sm text-jhooa-teal-200 font-amsiBold">
              @Loc["ExpContact"]
            </p>
          </div>
        </div>

        <!-- Pricing CTA buttons -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8 mt-10 justify-center">
          <div
            class="bg-jhooa-peach-100 text-white border-[3px] border-white px-10 py-4 font-monetaRegular font-bold flex flex-row w-full">
            <label class="basis-1/2 ">
              @Loc["Monthly"]
            </label>
            <label class="basis-1/2  text-end">
              7 @Loc["PriceMonthlyDesc"]
            </label>
          </div>
          <div
            class="bg-jhooa-teal-100 text-white border-[3px] border-white px-10 py-4 font-monetaRegular font-bold flex flex-row w-full">
            <label class="basis-1/2 ">
            @Loc["Yearly"]
            </label>
            <label class="basis-1/2  text-end">
              70 @Loc["PriceYearlyDesc"]
            </label>
          </div>
        </div>
      </div><!-- end RIGHT COLUMN -->
    </div><!-- end .md:grid -->

  </div><!-- end container -->
</section>