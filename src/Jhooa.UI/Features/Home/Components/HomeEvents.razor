@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resources.Home> Loc

<section class="bg-white md:transform">
  <div class="max-w-screen-xl mx-auto px-4 py-8">
    <!-- On desktop: 4 columns; on mobile: single column -->
    <div class="relative md:grid md:grid-cols-4 md:gap-3">

      <!-- Beach dinner image -->
      <div class="mb-4 md:mb-0">
        <img
          src="images/festival.jpg"
          alt="People having dinner at the beach"
          class="w-3/4 md:w-full h-auto object-cover"
        />
      </div>

      <!-- Festival image (desktop view) -->
      <div class="hidden md:block md:mt-20">
        <img
          src="images/beach-apero.jpg"
          alt="Concert crowd"
          class="w-full h-auto object-cover"
        />
      </div>

      <!-- Text block column -->
      <div class="flex flex-col justify-center  md:mt-8">
        <!-- On mobile: Festival image overlaps text -->
        <div class="md:hidden relative">
          <div class="absolute top-0 right-0 transform translate-y-[-65%] z-10 w-3/5">
            <img
              src="images/beach-apero.jpg"
              alt="Concert crowd"
              class="w-full h-auto object-cover rounded shadow"
            />
          </div>
        </div>

        <!-- Text block -->
        <div class="bg-jhooa-peach-100 text-white p-10 md:p-6  mt-20 md:mt-0 text-center">
          <p class="mb-4">
            @Loc["EventsPart1"]
          </p>
          <p class="mb-6">
            @Loc["EventsPart2"]
          </p>
          <a
            href="/Events"
            class="inline-block px-4 py-2 border-2 border-white text-white hover:bg-white hover:text-jhooa-peach-100 transition-colors"
          >
            @Loc["OurEvents"]
          </a>
        </div>
      </div>

      <!-- Campsite image (desktop only) -->
      <div class="hidden md:block">
        <img
          src="images/camping.jpg"
          alt="Campsite under starry night"
          class="w-full h-auto object-cover"
        />
      </div>

    </div>
  </div>
</section>