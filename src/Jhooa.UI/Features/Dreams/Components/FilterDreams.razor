@using Jhooa.UI.Features.Dreams.Models
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resources.Dreams> Loc

<FilterButton Text="@Loc["Small"]" Action="@(() => { SelectDreamType(DreamTypes.Small); })" />
<FilterButton Text="@Loc["Medium"]" Action="@(() => { SelectDreamType(DreamTypes.Medium); })" />
<FilterButton Text="@Loc["Big"]" Action="@(() => { SelectDreamType(DreamTypes.Big); })" />
<FilterButton Text="@Loc["All"]" Action="@(() => { SelectDreamType(null); })" />

@code
{
    [Parameter] public EventCallback<DreamTypes?> SelectDreamTypeCallback { get; set; }

    private void SelectDreamType(DreamTypes? type)
    {
        SelectDreamTypeCallback.InvokeAsync(type);
    }
}