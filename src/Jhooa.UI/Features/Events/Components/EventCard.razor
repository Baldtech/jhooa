@using Jhooa.UI.Features.Events.Models
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resources.Events> Loc

<article
    class="snap-start w-80 bg-white rounded-lg overflow-hidden shadow-md inline-block mr-8 mb-4">
    @if (string.IsNullOrWhiteSpace(Event.ImageUrl))
    {
        <img class="w-full h-48 object-cover" src="https://placehold.co/550x550/B79E98/fff?text=event" alt=""/>
    }
    else
    {
        <img class="w-full h-48 object-cover" src="@Event.ImageUrl" alt=""/>
    }
    <div class="p-4">
        <p class="text-sm text-jhooa-brick-100 mb-1">@Event.StartDate.ToString("MMMM yyyy")</p>
        @if (Event.IsPast)
        {
            <a href="/Events/@Event.Id" class="text-lg font-bold mb-3 text-jhooa-teal-200 block">@(CultureInfo.CurrentCulture.Name == "en-GB" ? Event.TitleEn : Event.Title)</a>
        }
        else
        {
            <p class="text-lg font-bold mb-3 text-jhooa-teal-200 block">@(CultureInfo.CurrentCulture.Name == "en-GB" ? Event.TitleEn : Event.Title)</p>
        }
        <Registration EventId="Event.Id" IsPast="Event.IsPast"/>
    </div>
</article>


@code {
    [Parameter] public required Event Event { get; set; }
}